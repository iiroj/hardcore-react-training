.person {
  background-color: hsla(0, 0%, 100%, 1);
  border-radius: 0.25em;
  box-shadow: inset 0 0 0 2px hsla(0, 0%, 80%, 1);
  margin: 0.5em 0;
  padding: 1em;
}

.blue {
  background-color: hsla(0, 40%, 95%, 1);
}

.pink {
  background-color: hsla(210, 40%, 95%, 1);
}

.name strong {
  font-weight: bold;
}
